<!DOCTYPE html>
<html>
  <head>
    <title>Spur</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "https://js.stripe.com/v1/",'application', 'data-turbolinks-track': 'reload' %>
    <%= tag :meta, :image => "stripe-key", :content => STRIPE_PUBLIC_KEY%>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
